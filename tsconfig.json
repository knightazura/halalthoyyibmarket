{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "jsx": "react",
        "lib": [
            "dom",
            "ES6"
        ]
    },
    "include": [
        "./resources/js/references.d.ts",
        "resources/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}